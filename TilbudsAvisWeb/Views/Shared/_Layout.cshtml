<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TilbudsFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TilbudsAvisWeb.styles.css" asp-append-version="true" />
    <style>
        .hero {
            background: url('~/images/hero-background.jpg') no-repeat center center/cover;
            color: white;
            text-align: center;
            padding: 2rem 2rem;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                color: black;
            }

            .hero p {
                font-size: 1.25rem;
                margin-top: 1rem;
                color: black;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
        }

        .navbar-custom {
            background-color: #4e996e;
        }

            .navbar-custom .nav-link {
                color: white;
                transition: transform 0.3s ease;
                padding: 10px 15px;
                position: relative;
            }

            .navbar-custom .navbar-brand {
                color: white;
                font-weight: bold;
            }

            .navbar-custom .nav-link:hover {
                font-weight: bold;
                transform: scale(1.1);
                color: white;
            }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2212%22 height=%2212%22 viewBox=%220 0 16 16%22 class=%22bi bi-list%22%3E%3Cpath fill=%22white%22 fill-rule=%22evenodd%22 d=%22M0 1.5A.5.5 0 0 1 .5 1h15a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1zm0 4A.5.5 0 0 1 .5 5h15a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1zm0 4A.5.5 0 0 1 .5 9h15a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1zm0 4A.5.5 0 0 1 .5 13h15a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1z%22/%3E%3C/svg%3E');
        }

        .navbar-collapse {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .navbar-nav {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .navbar-nav .nav-item {
                flex-shrink: 0;
            }

        .navbar-custom .nav-link {
            display: block;
        }

        @@media (max-width: 767px) {
            .navbar-custom .nav-link {
                padding: 10px 20px;
            }

                .navbar-custom .nav-link:hover {
                    transform: scale(1.1);
                }
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/favicon.ico" alt="Logo" style="height: 30px; margin-right: 4px; margin-top: 4px; width: 34px;">
                    TilbudsFinder.dk
                </a>

                <!-- This button will toggle the navbar on smaller screens (like mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Tilbud</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container">
            &copy; <span id="current-year"></span> - TilbudsFinder
        </div>
    </footer>

    <script>
        const timezone = "Europe/Copenhagen";
        const danishDate = new Date().toLocaleString("en-US", { timeZone: timezone });
        const danishYear = new Date(danishDate).getFullYear();
        document.getElementById("current-year").textContent = danishYear;
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
