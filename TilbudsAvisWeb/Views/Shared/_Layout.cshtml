<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TilbudsFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TilbudsAvisWeb.styles.css" asp-append-version="true" />
    <style>
        .hero {
            background: url('~/images/hero-background.jpg') no-repeat center center/cover;
            color: white;
            text-align: center;
            padding: 2rem 2rem;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                color: black;
            }

            .hero p {
                font-size: 1.25rem;
                margin-top: 1rem;
                color: black;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
        }

        .navbar-custom {
            background-color: #007bff;
        }

            .navbar-custom .nav-link {
                color: white;
            }

            .navbar-custom .navbar-brand {
                color: white;
                font-weight: bold;
            }

            .navbar-custom .nav-link:hover {
                color: #ffc107;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TilbudsFinder.dk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Retailers" asp-action="Index">Butikker</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Tilbud</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Om">Om</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container">
            &copy; 2024 - TilbudsFinder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privatlivspolitik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
